- if signed_in?
  = link_to edit_page_path(@page), class: "corner-link" do
    %i.fa.fa-pencil
  - link_to page_path(@page), method: :delete, data: { confirm: "Are you sure?" }, class: "corner-link danger" do
    %i.fa.fa-trash
  
%h1= @page.name

= render "shared/slider" if @page.slider?

= image_tag @page.image.url(:main),
                            class: "page-main-image simple-page-image" if @page.image.present?
= @page.content.html_safe