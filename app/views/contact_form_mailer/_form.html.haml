.contact-form-wrapper
  = form_tag(contact_form_path, remote: true) do
    .field
      = text_field_tag 'contact_form_name', nil, required: true, placeholder: "Your name"
    .field
      = text_field_tag 'contact_form_email', nil, required: true, placeholder: "Your email"
    .field
      = text_area_tag 'contact_form_message', nil, required: true,
                                                            placeholder: "Say something"
      = text_field_tag 'contact_form_nickname', nil, autocomplete: :off, placeholder: "Your nickname", class: "helement"
    = submit_tag "I'm done, send it!", class: "bttn action primary"